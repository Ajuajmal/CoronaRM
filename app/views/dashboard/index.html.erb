<h1 class="text-2xl font-bold">Dashboard</h1>

<section class="mt-8 flex">
    <div class="bg-white inline-block px-5 py-4 rounded-md shadow-lg">
        <h3 class="uppercase text-xs font-medium text-gray-600">Total Contacts</h3>
        <p class="text-3xl font-bold">
            <%= @contacts_count %>
        </p>
    </div>
    <div class="ml-4 bg-white inline-block px-5 py-4 rounded-md shadow-lg">
        <h3 class="uppercase text-xs font-medium text-gray-600">Primary Contacts</h3>
        <p class="text-3xl font-bold">
            <%= @primary_contacts_count %>
        </p>
    </div>
    <div class="ml-4 bg-white inline-block px-5 py-4 rounded-md shadow-lg">
        <h3 class="uppercase text-xs font-medium text-gray-600">Secondary Contacts</h3>
        <p class="text-3xl font-bold">
            <%= @secondary_contacts_count %>
        </p>
    </div>
</section>

<section class="mt-8">
    <hr class="block py-4" />
    <h2 class="font-bold font-xl">Calls Today</h2>
    <div class="mt-2 flex">
        <div class="bg-white inline-block px-5 py-4 rounded-md shadow-lg">
            <h3 class="uppercase text-xs font-medium text-gray-600">No of Calls Made</h3>
            <p class="text-3xl font-bold">
                <%= @number_of_contacts_contacted_today %>
            </p>
        </div>
        <div class="ml-4 bg-white inline-block px-5 py-4 rounded-md shadow-lg">
            <h3 class="uppercase text-xs font-medium text-gray-600">Primary Contacts</h3>
            <p class="text-3xl font-bold">
                <%= @number_of_primary_contacted_today %>
            </p>
        </div>
        <div class="ml-4 bg-white inline-block px-5 py-4 rounded-md shadow-lg">
            <h3 class="uppercase text-xs font-medium text-gray-600">Secondary Contacts</h3>
            <p class="text-3xl font-bold">
                <%= @number_of_secondary_contacted_today %>
            </p>
        </div>
    </div>
    <div class="mt-4 flex">
        <div class="bg-white inline-block px-5 py-4 rounded-md shadow-lg">
            <h3 class="uppercase text-xs font-medium text-gray-600">Contacts Left to Call</h3>
            <p class="text-3xl font-bold">
                <%= @contacts_count - @number_of_contacts_contacted_today %>
            </p>
        </div>
        <div class="ml-4 bg-white inline-block px-5 py-4 rounded-md shadow-lg">
            <h3 class="uppercase text-xs font-medium text-gray-600">Unreachable Contacts</h3>
            <p class="text-3xl font-bold">
                <%= @number_of_unreachable_contacts_contacted_today %>
            </p>
        </div>
        <div class="ml-4 bg-white inline-block px-5 py-4 rounded-md shadow-lg">
            <h3 class="uppercase text-xs font-medium text-gray-600">Primary Left to Call</h3>
            <p class="text-3xl font-bold">
                <%= @primary_contacts_count - @number_of_primary_contacted_today %>
            </p>
        </div>
        <div class="ml-4 bg-white inline-block px-5 py-4 rounded-md shadow-lg">
            <h3 class="uppercase text-xs font-medium text-gray-600">Secondary Left to Call</h3>
            <p class="text-3xl font-bold">
                <%= @secondary_contacts_count - @number_of_secondary_contacted_today %>
            </p>
        </div>
    </div>
</section>

<section class="mt-8">
    <hr class="block py-4" />
    <h2 class="font-bold font-xl">Data Generate</h2>
    <div class="mt-4 flex">
        <%= link_to "Generate Full Report", generate_csv_report_dashboard_index_path(format: :csv) ,class: "inline-flex items-center px-4 py-2 border border-transparent text-base leading-6 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition ease-in-out duration-15" %>
    </div>
    <div class="mt-4 flex">
        <%= link_to "Generate Report of Called Users Today", generate_csv_called_report_dashboard_index_path(format: :csv) ,class: "inline-flex items-center px-4 py-2 border border-transparent text-base leading-6 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition ease-in-out duration-15" %>
    </div>
</section>
